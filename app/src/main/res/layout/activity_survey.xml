<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_margin="10dp"
    tools:context=".Survey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Survey_Title"
            android:text="Survey"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q1"
            android:text="What is your name?"
            android:layout_below="@id/Survey_Title"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans1"
            android:hint="Answer"
            android:layout_below="@id/q1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q2"
            android:text="What is your job title / department?"
            android:layout_below="@id/ans1"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans2"
            android:hint="Answer"
            android:layout_below="@id/q2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q3"
            android:text="What is your company name?"
            android:layout_below="@id/ans2"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans3"
            android:hint="Answer"
            android:layout_below="@id/q3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q4"
            android:text="What is your e-mail?"
            android:layout_below="@id/ans3"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans4"
            android:hint="Answer"
            android:inputType="textEmailAddress"
            android:layout_below="@id/q4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q5"
            android:text="What is your phone number?"
            android:layout_below="@id/ans4"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ans5"
            android:hint="Answer"
            android:inputType="phone"
            android:layout_below="@id/q5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q6"
            android:text="What kind of application interest you?"
            android:layout_below="@id/ans5"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/checkboxq61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q6"
            android:text="Augmented Reality (AR)"/>
        <CheckBox
            android:id="@+id/checkboxq62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkboxq61"
            android:text="Virtual Reality (VR)"/>
        <CheckBox
            android:id="@+id/checkboxq63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkboxq62"
            android:text="Monitoring System with IIOT Platform"/>
        <CheckBox
            android:id="@+id/checkboxq64"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkboxq63"
            android:text="Smart Glass"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/q7"
            android:text="Do you have a plan to implement similar application in your factory?"
            android:layout_below="@id/checkboxq64"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/radioButtonQ71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q7"
            android:text="Yes"/>
        <RadioButton
            android:id="@+id/radioButtonQ72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioButtonQ71"
            android:text="No"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:layout_below="@id/radioButtonQ72"/>
    </RelativeLayout>

</ScrollView>