<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:elevation="6dp"
        android:minHeight="200dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/RelativeReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/MachineID1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/machine_id"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/MachineID1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/line"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Station1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Line1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/station"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/RepairTimeStart1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Station1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/repair_time_start"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/RepairTimeFinish1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RepairTimeStart1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/repair_time_finish"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RepairTimeFinish1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/repair_duration"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/PIC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Duration1"
                    android:text="@string/pic"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/RelativeReport">

                <TextView
                    android:id="@+id/colon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/colon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon1"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/colon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon2"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/colon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon3"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/colon5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon4"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/colon6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon5"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/colon7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/colon6"
                    android:layout_marginBottom="5dp"
                    android:text="@string/colon"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeReportData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/colon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/MachineID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/MachineID"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Line"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/RepairTimeStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Station"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/RepairTimeFinish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RepairTimeStart"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RepairTimeFinish"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/PIC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Duration"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
